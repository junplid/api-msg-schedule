generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int       @id @unique @default(autoincrement())
  key         String    @unique @db.VarChar(50)
  full_name   String    @db.VarChar(200)
  whatsapp    String    @unique @db.VarChar(15)
  email       String    @unique @db.VarChar(200)
  password    String    @db.VarChar(150)
  type        String    @db.VarChar(5)
  code        String?   @db.VarChar(5)
  available   Int?      @default(0)
  payday      DateTime?
  due_date    DateTime?
  createAt    DateTime?
  messages    messages[]
  products    products[]
}

model messages {
  id        Int     @id @default(autoincrement())
  text      String
  days      Int
  user_key  String  @db.VarChar(50)
  user      users   @relation(fields: [user_key], references: [key], onDelete: Cascade, onUpdate: Cascade)
}

model products {
  id        Int     @unique @default(autoincrement())
  name      String
  price     Decimal @db.Decimal(5,2)
  user_key  String  @db.VarChar(50)
  user      users   @relation(fields: [user_key], references: [key], onDelete: Cascade, onUpdate: Cascade)
  plan      plans[]

  @@id([id, user_key])
  @@index([user_key])
}

model plans {
  id          Int       @id @default(autoincrement())
  name        String
  price       Decimal   @db.Decimal(5,2)
  product_id  Int 
  product     products  @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([product_id])
}

